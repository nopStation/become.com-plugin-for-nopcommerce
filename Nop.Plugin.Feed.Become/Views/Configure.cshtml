@{
    Layout = "_ConfigurePlugin";
}

@model FeedBecomeModel
@using Nop.Plugin.Feed.Become.Models

<form asp-controller="FeedBecome" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <p>
                    If you have several stores configured (multi-store configuration), then the feed will be generated for the current store.
                </p>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ProductPictureSize" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ProductPictureSize" />
                        <span asp-validation-for="ProductPictureSize"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="CurrencyId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CurrencyId" />
                        <span asp-validation-for="CurrencyId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                        <input type="submit" name="generate" class="btn bg-green" value="@T("Plugins.Feed.Become.Generate")" />
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.GenerateFeedResult))
                {
                    <div class="form-group row">
                        <div class="col-md-offset-3 col-md-9">
                            <b>@Html.Raw(Model.GenerateFeedResult)</b>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</form>
